!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Hipster"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "head"
    = csrf_meta_tags
    = yield(:head)
  %body
    #main{:role => "main"}
      .container
        .row.content
          .span12
            = yield
        .row
          .span12
            %footer
              .row
                .span2.pull-left
                  Created by
                  %br
                  = link_to "South Pole Steve", "http://www.southpolesteve.com"
                  - if current_user
                    %br
                    Click here to
                    = link_to "Logout", signout_path
                .pull-right
                  = link_to image_tag("echonest.png", :class => 'echonest'), "http://www.theechonest.com/"
                  = link_to image_tag("murfie.png",:class => 'murfie'), "https://www.murfie.com/"
                  = link_to image_tag("rethinkmusic.png",:class => 'rethink'), "http://rethink-music.com/"

    = javascript_include_tag "application"
